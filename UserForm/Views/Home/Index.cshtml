@model IEnumerable<UserInformations>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<table class="table table-striped">

    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Telephone</th>
            <th scope="col">Email</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Telephone</td>
                <td>@item.Email</td>
                <td><a href="@item.Image" class="btn btn-outline-secondary" role="button" aria-pressed="true" target="_blank">Image</a></td>
                <td>
                    <a href="/Home/Edit/@item.Id">Edit</a> |
                    <a href="/Home/Details/@item.Id">Details</a> |
                    <a href="/Home/Delete/@item.Id">Delete</a>
                </td>
            </tr>


        }
    </tbody>
</table>
<div class="d-flex justify-content-center"><a href="/Home/Create" class="btn btn-outline-primary" role="button">Create New User</a></div>