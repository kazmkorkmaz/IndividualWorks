@model UserForm.Models.UserInformations
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>
<hr />
<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <dl class="row">

        <dt class="col-sm-2">
            Id:
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Surname:
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
        <dt class="col-sm-2">
            Telephone:
        </dt>
        <dd class="col-sm-10">
            @Model.Telephone
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.Email">@Model.Email</a>
        </dd>
        <dt class="col-sm-2">
            Password:
        </dt>
        <dd class="col-sm-10">
            @Model.Password
        </dd>
        <dt class="col-sm-2">
            Image:
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" alt="Alternate Text" width="250" />
        </dd>
    </dl>
</div>
<form action="/Home/Delete" method="post">
    <div class="form-group">
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="submit" class="btn btn-danger" id="Delete" name="Delete" value="Delete" />
    </div>

</form>
